<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.example.alexandre.trabalhorestaurante.Dashboard"
    android:orientation="vertical"
    android:gravity="top|center_vertical"
    android:background="#00b90c00">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:background="#7e021b">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/tvLogin"
            android:textSize="20dp"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="20dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:textColor="#ffffff" />
    </RelativeLayout>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Novo Pedido"
        android:id="@+id/bNovoPedido"
        android:height="150dp"
        android:layout_marginBottom="30dp"
        android:textColor="#fffff6"
        android:textSize="30dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Pagamento"
        android:id="@+id/bPagamento"
        android:height="150dp"
        android:layout_marginBottom="30dp"
        android:onClick="pagamento"
        android:textColor="#fffff6"
        android:textSize="30dp" />

</LinearLayout>
