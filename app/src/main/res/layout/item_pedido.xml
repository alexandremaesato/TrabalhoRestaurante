<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="horizontal"
    android:padding="2dp"
    android:background="#ffc1ac">
    <TextView android:layout_gravity="center_vertical"
        android:id="@+id/txtNome" android:layout_width="0dp" android:layout_height="wrap_content" android:text="nome"
        android:layout_weight="1" android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginLeft="30dp" />
    <TextView android:layout_gravity="center_vertical"
        android:id="@+id/txtValor" android:layout_width="0dp" android:layout_height="wrap_content" android:text="valor"
        android:layout_weight="1" android:textAppearance="?android:attr/textAppearanceMedium"
        android:gravity="right"
        android:layout_marginRight="30dp" />
</LinearLayout>